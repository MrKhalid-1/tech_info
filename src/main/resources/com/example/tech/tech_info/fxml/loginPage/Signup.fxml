<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="440.0" spacing="20"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.tech.tech_info.controller.loginPage.SignupController"
      style="-fx-padding: 20;">

    <Label text="Sign Up" style="-fx-font-size: 28px; -fx-font-weight: bold;" textFill="#333" />

    <VBox spacing="10" style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;">
        <Label text="Username" style="-fx-font-size: 14px;" />
        <TextField fx:id="signupUsernameField" promptText="Enter Username" style="-fx-pref-width: 300px;" />
        <Label text="Password" style="-fx-font-size: 14px;" />
        <PasswordField fx:id="signupPasswordField" promptText="Enter Password" style="-fx-pref-width: 300px;" />
        <Button text="Create Account" onAction="#handleSignup" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 300px; -fx-padding: 10;" />
    </VBox>
</VBox>
