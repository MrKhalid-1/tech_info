<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="440.0" spacing="20" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tech.tech_info.controller.Customer.AddPaymentDialogController">

    <Label graphicTextGap="7.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Add New Payment" />

    <HBox spacing="10">
        <Label alignment="CENTER_RIGHT" style="-fx-font-size: 14px; -fx-min-width: 80px;" text="Amount:" />
        <TextField fx:id="amountField" promptText="Enter amount" style="-fx-pref-width: 250px;" />
    </HBox>

    <HBox spacing="10">
        <Label alignment="CENTER_RIGHT" style="-fx-font-size: 14px; -fx-min-width: 80px;" text="Comment:" />
        <TextField fx:id="commentField" promptText="Enter comment" style="-fx-pref-width: 250px;" />
    </HBox>

    <HBox spacing="10">
        <Label alignment="CENTER_RIGHT" style="-fx-font-size: 14px; -fx-min-width: 80px;" text="Date:" />
        <DatePicker fx:id="datePicker" style="-fx-pref-width: 250px;" />
    </HBox>

    <Button fx:id="selectImageButton" onAction="#handleSelectImage" text="Select Image" style="-fx-font-size: 14px; -fx-pref-width: 150px;" />

    <Button fx:id="addPaymentButton" alignment="CENTER" onAction="#handleAddPayment" style="-fx-font-size: 14px; -fx-pref-width: 150px;" text="Add Payment" />

</VBox>
