<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="500.0" prefWidth="440.0" spacing="20" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tech.tech_info.controller.Customer.AddCustomerDialogController">

    <Label graphicTextGap="7.0" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Add New Customer" />

    <HBox spacing="10">
        <Label alignment="CENTER_RIGHT" style="-fx-font-size: 14px; -fx-min-width: 80px;" text="Name:" />
        <TextField fx:id="nameField" promptText="Enter customer name" style="-fx-pref-width: 250px;" />
    </HBox>

    <HBox spacing="10">
        <Label alignment="CENTER_RIGHT" style="-fx-font-size: 14px; -fx-min-width: 80px;" text="Address:" />
        <TextField fx:id="addressField" promptText="Enter customer address" style="-fx-pref-width: 250px;" />
    </HBox>

    <HBox spacing="10">
        <Label alignment="CENTER_RIGHT" style="-fx-font-size: 14px; -fx-min-width: 80px;" text="Mobile:" />
        <TextField fx:id="mobileField" prefHeight="31.0" prefWidth="313.0" promptText="Enter customer mobile number" style="-fx-pref-width: 250px;" />
    </HBox>

    <HBox spacing="10">
        <Label alignment="CENTER_RIGHT" minWidth="42.0" prefHeight="20.0" prefWidth="42.0" style="-fx-font-size: 14px; -fx-min-width: 80px;" text="AadharCardNumber:" />
        <TextField fx:id="aadharCardNumberField" promptText="Enter customer aadharCardNumber" style="-fx-pref-width: 250px;" />
    </HBox>

<!--    <HBox spacing="10">-->
<!--        <Label alignment="CENTER_RIGHT" style="-fx-font-size: 14px; -fx-min-width: 80px;" text="Payment:" />-->
<!--        <TextField fx:id="paymentField" promptText="Enter payment amount" style="-fx-pref-width: 250px;" />-->
<!--    </HBox>-->

    <Button fx:id="addCustomerButton" alignment="CENTER" onAction="#handleAddCustomer" style="-fx-font-size: 14px; -fx-pref-width: 150px;" text="Add Customer" />

</VBox>
